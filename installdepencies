---
- hosts:
  become: yes
  tasks:
    - name: Swap Off
      shell: swapoff -a
    - name: Swap Off in Fstab
      replace:
        path: /etc/fstab
        regexp: '^([^#].*?\sswap\s+sw\s+.*)$'
        replace: '# \1'
    - name: Add epel repo
      dnf:
        name: epel-release
        state: latest
        update_cache: yes
    - name: Add kubernetes repo
      yum_repository:
        name: kube-repo
        description: kubernetes repository
        baseurl: https://packages.cloud.google.com/yum/repos/kubernetes-el7-x86_64
        gpgcheck: no
    - name: Add docker repo
      yum_repository:
        name: dockerce-repo
        description: docker ce repository
        baseurl: https://download.docker.com/linux/centos/docker-ce.repo
        gpgcheck: no
    - name: Install all necesary
      yum: 
        name: "{{item}}"
        state: present
      loop:
        - docker-ce
        - kubelet
        - kubeadm
    - name: Start Sevices
      systemctl:
        name: "{{item}}"
        enabled: true
        state: restarted
      loop:
        - kubelet
        - docker
        
        
        
